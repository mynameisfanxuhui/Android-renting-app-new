<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#bf7d7f"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/head" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="韦小宝"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="123456"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="#ccc" />

            <TextView
                android:id="@+id/tv_user_collect"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:drawableLeft="@mipmap/user_collect"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="收藏"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:drawableLeft="@mipmap/user_money"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="钱包"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <TextView
                android:id="@+id/tv_user_pingjia"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:drawableLeft="@mipmap/user_pingjia"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="评价"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="#ccc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:drawableLeft="@mipmap/user_friend"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="好友"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:drawableLeft="@mipmap/user_history"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="足迹"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="#ccc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/white"
                android:drawableLeft="@mipmap/user_shangjia"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="商家入驻"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>